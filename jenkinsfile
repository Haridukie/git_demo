pipeline {
    stages {
        stage('Test') {
            agent { docker { image 'python:latest' }
            }
            steps {
                sh 'python --version'
            }
        }

        stage('Build') {
            agent {
                docker { image 'python:latest' }
            }
        
            steps {
                sh 'python -V'
            }
        }
    }
}
