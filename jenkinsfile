pipeline {
     agent any
    
    stages {
        stage('Test') {
            agent {
                docker {
                    image 'python:latest'
                }
            }
            steps {
                sh 'python --version'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image ' hariharan1520/getting-started '
                }
            }
            steps {
                sh 'python -V'
            }
        }
    }
}
