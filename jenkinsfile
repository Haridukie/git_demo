pipeline {
     agent any
    
    stages {
        stage('Test') {
            agent {
                docker {
                    image 'python:latest'
                }
            }
            steps {
                sh 'python --version'
            }
        }

        stage('Build') {
            agent {
                docker {
                    image 'hariharan1520/getting-started'
                }
            }
            steps {
                sh 'docker run -dp 5000:5000 getting-started'
            }
        }


        stage('deploy') {
            agent{
                docker {image 'hariharan1520/playground'}
            }
            steps {
                sh 'echo "image successfully downloaded" '
                sh 'ls -ltr && pwd '
            }
        }

        stage('testing'){
            
            agent {
                docker {
                    image 'mysql:latest'    
                 }
            }
            
            when{
                expression{
                    currentBuild.result == 'SUCCESS'
                }
            }

            steps{
                sh 'mysql -V'
                sh 'echo "${env.BUILD_ID} and ${env.JENKINS_URL}   "'
            }

        }
       
    }
}
