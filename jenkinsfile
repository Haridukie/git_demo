pipeline {
    agent {
        docker { image 'hariharan1520/getting-started' }
    }
    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }

        stage('Build') {
            agent {
                docker { image 'python:3-slim-buster' }
            }
        
            steps {
                sh 'python -V'
            }
        }
    }
}
